@model IEnumerable<BlogPost>

<div class="tg-widget tg-widgettrending">
    <div class="tg-widgettitle">
        <h3>Trending Posts</h3>
    </div>
    <div class="tg-widgetcontent">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <article class="tg-post" style="min-height: 0">
                        <figure style="height: 75px;">
                            <a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug">
                                <img src="~/uploads/images/@item.ImagePath" alt="@item.Title">
                            </a>
                        </figure>
                        <div class="tg-postcontent">
                            <div class="tg-posttitle">
                                <h3>
                                    <a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug">@item.Title</a>
                                </h3>
                            </div>
                            <span class="tg-bookwriter">
                                By:
                                <a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug">@item.CreatedByUser?.Name @item.CreatedByUser?.Surname</a>
                            </span>
                        </div>
                    </article>
                </li>
            }
        </ul>
    </div>
</div>