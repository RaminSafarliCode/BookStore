@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

<main id="tg-main" class="tg-main tg-haslayout">
    <!--************************************
            Inner Banner Start
    *************************************-->
    <div class="tg-innerbanner tg-haslayout tg-parallax tg-bginnerbanner"
         data-z-index="-100"
         data-appear-top-offset="600"
         data-parallax="scroll"
         data-image-src="~/assets/images/parallax/bgparallax-07.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tg-innerbannercontent">
                        <h1>Authors</h1>
                        <ol class="tg-breadcrumb">
                            <li><a asp-controller="home" asp-action="index">home</a></li>
                            <li class="tg-active">Authors</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--************************************
            Inner Banner End
    *************************************-->
    <!--************************************
            Main Start
    *************************************-->
    <!-- <main id="tg-main" class="tg-main tg-haslayout"> -->
    <!--************************************
                Authors Start
        *************************************-->
    <div class="tg-authorsgrid">
        <div class="container">
            <div class="row">
                <div class="tg-authors">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="tg-sectionhead">
                            <h2>
                                <span>Strong Minds Behind Us</span>Most Popular Authors
                            </h2>
                        </div>
                    </div>

                    @foreach (var item in Model)
                    {
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                            <div class="tg-author">
                                <figure>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <img src="~/uploads/images/@item.ImagePath" alt="@item.Name" />
                                    </a>
                                </figure>
                                <div class="tg-authorcontent">
                                    <h2><a href="javascript:void(0);">@item.Name</a></h2>
                                    <span>@item.Books.Count() Published Books</span>
                                    <ul class="tg-socialicons">
                                        <li class="tg-facebook">
                                            <a href="javascript:void(0);">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li class="tg-twitter">
                                            <a href="javascript:void(0);">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li class="tg-linkedin">
                                            <a href="javascript:void(0);">
                                                <i class="fa fa-linkedin"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--************************************
                Authors End
        *************************************-->
</main>

